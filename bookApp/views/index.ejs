<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css'/>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a class="btn btn-success" href="/books/add">Add book</a>
    <hr/>

    <div class="row">
      <% bookList.forEach(function(book, i) { %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
            <p class="card-text"><%= book.description %>
            </p>
            <a href="/books/edit/<%= book._id%>" class="card-link">Edit</a>
            <a href="/books/remove/<%= book._id %>" class="card-link">Delete</a>
          </div>
        </div>
      <%})%>
    </div>

  </body>
</html>
